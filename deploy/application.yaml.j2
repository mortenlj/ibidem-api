---
apiVersion: yakup.ibidem.no/v1
kind: Application
metadata:
  name: ibidem-api
  namespace: default
  labels:
    app: ibidem-api
spec:
  image: "{{ image }}:{{ version }}"
  ports:
    http:
      ingress:
        - pathType: Prefix
          paths:
            - /
          zone: public
      port: 3000
  probes:
    liveness:
      http:
        initialDelaySeconds: 10
        portName: http
        path: /_/healthy
    readiness:
      http:
        initialDelaySeconds: 10
        portName: http
        path: /_/ready
